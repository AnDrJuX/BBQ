<h1><%= t 'views.event_mailer.photo.title' %></h1>

<p><%= t 'views.event_mailer.photo.author' %>: <%= @photo.user.name %>
<p><%= image_tag @photo.photo.thumb.url %></p>
<hr/>

<%= t 'views.event_mailer.photo.event' %>
<h3><%= link_to @event.title, url_for(
    controller: 'events',
    action: 'show',
    id: @event,
    massage: 'event') %></h3>

<%= t 'views.event_mailer.photo.datetime' %>
<h4><%= l @event.datetime %></h4>

<%= t 'views.event_mailer.photo.owner' %>
<h4><%= @event.user.name %></h4>
